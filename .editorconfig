# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = tab
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_style = space

[*.c]
indent_style = space
indent_size = 2

[*.{html,css,js}]
indent_style = space
indent_size = 2
